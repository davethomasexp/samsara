<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium) %>
      </div>
          <div class="col-md-7 col-md-offset-1">
                <h1 class="review_title"><%= @movie.title %></h1>
                <p><%= @movie.description %></p>
              </tr>
              <tr>
                <td><strong>Length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @movie.director %></td>
              </tr>
              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @movie.rating %></td>
              </tr>
          <%= link_to "Write a Review", new_movie_review_path(@movie) %>
          </div>
        </div>
    </div>
    <div class="row">
      <% if @reviews.blank? %>
        <h3>No review just yet. Would you like to add the first?</h3>
        <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
      <% else %>
      <% @reviews.each do |review| %>
        <div class="reviews">
        <strong>Title Here</strong>
        <div class="star-rating" data-score=<%= review.rating %>></div>
        <strong>Posted by</strong> <%= review.user.email %> <strong>on</strong> <%= review.created_at.strftime("%b %d, %Y") %>
        <p><%= review.comment %></p>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
             return $(this).attr('data-score');
      }
    });
</script>